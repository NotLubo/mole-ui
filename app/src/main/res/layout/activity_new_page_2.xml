<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".new_page_2">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="For measuring size I want to use"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="184dp"
        android:layout_marginTop="76dp"
        android:background="#FFFFFF"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/select_bg_01"
        tools:srcCompat="@drawable/select_bg_01" />

    <Button
        android:id="@+id/button_coin"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:layout_marginTop="68dp"
        android:shadowColor="#000000"
        android:text="Coin"
        android:textColor="#000000"
        app:backgroundTint="@color/white"
        app:cornerRadius="100dp"
        app:elevation="20dp"
        app:icon="@drawable/iss_15344_31210_01"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconSize="30dp"
        app:iconTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:strokeColor="#E4585D"
        app:strokeWidth="0.5dp" />

    <Button
        android:id="@+id/button_tpRoll"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:layout_marginTop="28dp"
        android:shadowColor="#000000"
        android:text="Toilet Roll"
        android:textColor="#000000"
        app:backgroundTint="@color/white"
        app:cornerRadius="100dp"
        app:icon="@drawable/tproll"
        app:iconGravity="textStart"
        app:iconSize="30dp"
        app:iconTint="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_coin"
        app:layout_constraintVertical_bias="0.027"
        app:strokeColor="#E4585D"
        app:strokeWidth="0.5dp" />

</androidx.constraintlayout.widget.ConstraintLayout>